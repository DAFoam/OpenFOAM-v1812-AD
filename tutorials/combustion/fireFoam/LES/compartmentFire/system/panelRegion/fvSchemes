FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default Euler;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default        none;
}

laplacianSchemes
{
    default none;
    //laplacian(K,T) Gauss linear uncorrected;
    laplacian(kappa,T) Gauss harmonic uncorrected;
    laplacian(thermo:alpha,h) Gauss harmonic uncorrected;
}

interpolationSchemes
{
    default linear;
    //default none;
}

snGradSchemes
{
    default        uncorrected;
}


