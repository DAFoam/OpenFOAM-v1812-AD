FoamFile
{
    version         2;
    format          ascii;
    class           volScalarField;
    location        "0";
    object          T;
}

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 292;

boundaryField
{
    inletair
    {
        type            uniformFixedValue;
        uniformValue
        {
            type            csvFile;
            nHeaderLine     1;
            refColumn       0;
            componentColumns ( 2 );
            separator       ",";
            mergeSeparators no;
            file            "<constant>/inlet.csv";
        }
    }
    outlet
    {
        type            inletOutlet;
        inletValue      uniform 292;
        value           uniform 292;
    }
    walls
    {
        type            zeroGradient;
    }
}


