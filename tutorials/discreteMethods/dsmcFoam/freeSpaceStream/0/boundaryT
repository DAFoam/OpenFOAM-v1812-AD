FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      boundaryT;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    outlet
    {
        type            fixedValue;
        value           uniform 300;
    }

    inlet
    {
        type            fixedValue;
        value           uniform 300;
    }

    sides
    {
        type            fixedValue;
        value           uniform 300;
    }
}

