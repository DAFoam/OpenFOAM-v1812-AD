angledDuct
{
    type                        searchableSurfaceControl;
    forceInitialPointInsertion  on;
    priority                    1;
    mode                        inside;
    surfaceCellSizeFunction     uniformValue;
    uniformValueCoeffs
    {
        surfaceCellSizeCoeff    1;
    }
    cellSizeFunction            uniform;
    uniformCoeffs
    {}
}

porosity
{
    type                        searchableSurfaceControl;
    forceInitialPointInsertion  on;
    priority                    1;
    mode                        inside;
    surfaceCellSizeFunction     uniformValue;
    uniformValueCoeffs
    {
        surfaceCellSizeCoeff    1;
    }
    cellSizeFunction            uniform;
    uniformCoeffs
    {}
}

