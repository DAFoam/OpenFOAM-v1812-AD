FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      boundaryRadiationProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


".*"
{
    mode            lookup;
    emissivity      1.0;
    absorptivity    1.0;
}

"bottomAir_to_.*"
{
    type            boundaryRadiation;
    mode            solidRadiation;
}


