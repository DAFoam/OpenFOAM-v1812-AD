FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0/exterior";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 260;

boundaryField
{
    atmosphere
    {
        type            inletOutlet;
        inletValue      uniform 260;
        value           uniform 260;
    }
    symmetry
    {
        type            symmetryPlane;
    }
    exterior_to_ice
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           uniform 260;
        Tnbr            T;
        kappaMethod     fluidThermo;
        kappa           none;
    }
}


