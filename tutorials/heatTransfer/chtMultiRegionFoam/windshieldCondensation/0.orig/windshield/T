FoamFile
{
    version     2.0;
    format      binary;
    class       volScalarField;
    location    "0/windshield";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 260;

boundaryField
{
    symmetry
    {
        type            symmetryPlane;
    }
    walls
    {
        type            zeroGradient;
    }
    windshield_to_cabin
    {
        type            humidityTemperatureCoupledMixed;
        kappaMethod     solidThermo;
        kappa           none;
        value           uniform 260;
    }
    exterior
    {
        type            externalWallHeatFluxTemperature;
        mode            coefficient;
        h               uniform 10;
        Ta              uniform 260;
        kappaMethod     solidThermo;
        kappa           none;
        value           uniform 260;
    }
}


