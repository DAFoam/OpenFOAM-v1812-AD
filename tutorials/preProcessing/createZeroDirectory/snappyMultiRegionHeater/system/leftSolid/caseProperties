FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      caseProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

initialConditions
{
    p       uniform 100000;
    rho     uniform 8000;
    T       uniform 300;
}


boundaryConditions
{
    thermalWalls
    {
        category    wall;
        type        thermal;
        patches     (minX minZ maxZ);
        options
        {
            heatTransfer adiabatic;
        }
        values
        {
            $:initialConditions;
        }
    }
    thermalCoupledWalls
    {
        category    wall;
        type        thermal;
        patches     (".*_to_.*");
        options
        {
            heatTransfer thermalCoupled;
        }
        values
        {
            $:initialConditions;
        }
    }
}


