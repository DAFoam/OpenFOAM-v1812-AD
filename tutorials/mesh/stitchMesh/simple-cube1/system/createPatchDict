FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

pointSync   false;

outerSet
{
    patchInfo
    {
        type patch;
        inGroups (outer);
    }

    constructFrom set;
}


// Patches to create.
patches
(
    {
        name outerx;
        set  outerx;
        $outerSet;
    }

    {
        name outery;
        set  outery;
        $outerSet;
    }

    {
        name outerz;
        set  outerz;
        $outerSet;
    }
);

