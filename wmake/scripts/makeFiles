# Script
#     makeFiles
#
# Description
#     Scan the current directory for source files and construct Make/files
#
#     Usage : makeFiles
#
#------------------------------------------------------------------------------
dirToString="$WM_DIR/platforms/$WM_ARCH$WM_COMPILER"/dirToString

if [ -r Make/files ]
then
    echo "Error: Make/files already exists - exiting" 1>&2
    exit 1
fi

[ -x "$dirToString" ] || {
    echo "Error: no command $dirToString" 1>&2
    exit 1
}

[ -d Make ] || mkdir Make
rm -f Make/files
#------------------------------------------------------------------------------
echo "Creating Make/files"

for dir in $(find . -mindepth 1 -type d -print)
do
    case "$dir" in
    . | ./Make | ./lnInclude )
        # Skip special directories
        ;;
    *)
        echo "$(echo $dir | $dirToString -strip)  =  ${dir#./}"
        ;;
    esac
done > Make/files
[ -s Make/files ] && echo >> Make/files

for file in $(find . -name "*.[cCylLfF]" -type f -print)
do
    pathName=$(echo ${file%/*} | $dirToString -strip)

    if [ -n "$pathName" ]
    then
        echo '$('$pathName')/'"${file##*/}"
    else
        echo "${file##*/}"
    fi
done >> Make/files

echo >> Make/files
echo 'EXE = $(FOAM_APPBIN)/'"${PWD##*/}" >> Make/files

#------------------------------------------------------------------------------
