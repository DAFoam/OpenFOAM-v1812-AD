SUFFIXES += .y .Y

ytoo = $E $(call QUIET_MESSAGE,yacc,$(<F)) \
    $(WM_SCHEDULER) yacc -v -d $< $(AND) \
    mv y.tab.c $(@D)/$(<F).c $(AND) \
    mv y.tab.h $(@D)/parser.h $(AND) \
    $(CC) $(c++FLAGS) -c $(@D)/$(<F).c -o $@

