#!/bin/sh
cd ${0%/*} || exit 1                        # Run from this directory
. $WM_PROJECT_DIR/wmake/scripts/AllwmakeParseArguments # (for error catching)
. $WM_PROJECT_DIR/wmake/scripts/have_fftw

#------------------------------------------------------------------------------

if have_fftw
then
    wmake $targetType
else
    echo "==> skip noise utility (no FFTW)"
fi

#------------------------------------------------------------------------------
